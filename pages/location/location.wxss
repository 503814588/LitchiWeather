.container {
 height: 100%;
 width: 100%; 
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: space-between;
 padding: 10px 15px;
 box-sizing: border-box; 
} 
.flex-item {
  position: absolute;
  z-index: 9999;
  width: 100px;
} 
.city_info {
  position: absolute;
  top: 81%;
  width: 95%;
  height: 110px;
  border-radius: 5px;
  color: #666666;
  text-align: center;
  padding: 20px 40px;
  font-size: 15px;
  box-sizing: border-box;
} 
.map_container{  
  position: absolute;
  top: 0;  
  bottom: 20%;  
  left: 0;  
  right: 0;  
}  
.map{  
  width: 100%;  
  height: 100%;  
}  
.map_text{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20%;
  /* height: 80px;   */
  background: #fff;  
  padding: 0 15px;  
}  
text{  
  margin: 5px 0;  
  display: block;  
  font-size:12px;  
}  
.h1{  
  margin: 15px 0;  
  font-size:15px;  
}
.now_weather{
 height: 100%;
 width: 100%;
 margin-bottom: 10px;
 border-radius: 5px;
 color: #666666;
 display: flex;
 font-size: 14px;
 text-align: center;
 box-sizing: border-box;
 background-color: #FFF;
}
.section{
  height: 30px;
  width: 100%;
}
.section input{
  width:90%;
  margin:5px auto;
  border:1px solid #c3c3c3;
  height:30px;
  border-radius: 3px;
  padding: 0 5px;
}
.text_box{
  margin: 10px 25px;
  border-bottom:1px solid #c3c3c3;
  padding-bottom:10px
}

.city_info>view{
 flex: 1;
}
.city_info>view{
 margin: 5px 0;
}
.background {
  background-color: #FFF;
}
.cond_txt_text{
 font-size: 14px;
 margin-bottom: 3px;
 color: #333333;
}


.map-tab-bar{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  font-size: 0;
  background-color: #fff;
}
.map-hide{display: none;}
.map-foot{
  top: auto;
  bottom: 0;
  padding: 0 10px;
}
.map-name{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  overflow: hidden;
}
.map-address{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  overflow: hidden;
}
.map-tab-li{
  display: inline-block;
  width: 25%;
  overflow: hidden;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}
.map-tab-li.active{color: #fff;background-color: lightgreen;border-radius: 5px;}